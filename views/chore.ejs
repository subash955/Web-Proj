        <h1 class = "display-3"><h1>Create a Chore Here</h1>
        <div class="container">
                
               
        <div class="row" style= 'width: 40%; margin: 50px auto'>
                
            <form action="/chore" method ="POST" class = 'form'>
                <label>Chore Name:</label>
                <div class="form-group" style="width: 100%">
                       
                    <input type='text' class = 'form-control' name="choreid" placeholder="Chore Name">
                </div>
                <div class="form-group" style="width: 100%" >
                        <label for="sel1">Chore Group:</label>
                        <select class="form-control" name="group_n">
                        <%for (var i = 0; i < data.length; i++){%>
    
                            <option>
                            <%=data[i].groupname%>
                            </option> 
                                <%}%>
                        </select>
                </div>

                <button type="submit" class="btn btn-primary btn-lg" style= 'margin-bottom: 5px;'>Create</button>
            </div>
        
                
            </form>
